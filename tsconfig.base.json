{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@rave/utils": ["packages/utils/src/index.ts"],
      "@rave/types": ["packages/types/src/index.ts"],
      "@repo/ui/*": ["packages/ui/src/*"]
    }
  }
}